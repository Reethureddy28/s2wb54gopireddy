extends layout

block content

  h1= title
  -
    let results = [
      {
        "popcorn_flavour": "Cheese",
        "popcorn_quantity": "10lb",
        "popcorn_cost": 50
      },
      {
        "popcorn_flavour": "Tomato",
        "popcorn_quantity": "20lb",
        "popcorn_cost": 25
      },
      {
        "popcorn_flavour": "Salty",
        "popcorn_quantity": "30lb",
        "popcorn_cost": 150
      },                   
    ]
  div(class= "container-fluid")
    div(class = "row")
      each item,index in results
        div(class= "col-sm-2" , onclick=`buy(${index})`) #{item.popcorn_flavour}
        div(class= "col-sm-2", onclick=`buy(${index})`) #{item.popcorn_quantity}
        div(class= "col-sm-2", onclick=`buy(${index})`) #{item.popcorn_cost}

  script.
    function buy(itemNum){
      alert(`You purchased item ${itemNum+1}`)
    }
